<body>
  <div class="container">
    <h2>Sistem Pemesanan Tiket</h2>
    <p>üèç Balap Motor GIFI - Hitung Total Otomatis</p>

    <label for="jumlah">Jumlah Tiket</label>
    <input type="number" id="jumlah" min="1" value="1" />

    <label>Jenis Kursi</label>
    <div class="kursi">
      <label>
        <input type="radio" name="kursi" value="reguler" checked />
        <span>Reguler<br>Rp50.000</span>
      </label>
      <label>
        <input type="radio" name="kursi" value="vip" />
        <span>VIP<br>Rp75.000</span>
      </label>
    </div>

    <button id="pesan" type="button">Pesan & Hitung Total</button>
    <button id="reset" type="button">Reset</button>

    <div class="hasil">
      <p>Jenis Kursi: <strong id="jenis">Reguler</strong></p>
      <p>Harga per Tiket: <strong id="harga">Rp50.000</strong></p>
      <p>Jumlah Tiket: <strong id="jumlah2">1</strong></p>
      <p class="total">Total: <span id="total">Rp50.000</span></p>
    </div>

    <footer>üèÅ Selamat Menonton Balap Motor GIFI üèç</footer>
  </div>

  <script>
    const jumlah = document.getElementById('jumlah');
    const jenisText = document.getElementById('jenis');
    const hargaText = document.getElementById('harga');
    const jumlah2 = document.getElementById('jumlah2');
    const totalText = document.getElementById('total');

    document.getElementById('pesan').addEventListener('click', () => {
      const jumlahTiket = parseInt(jumlah.value) || 1;
      const jenis = document.querySelector('input[name="kursi"]:checked').value;

      let harga = jenis === "vip" ? 75000 : 50000;
      const total = jumlahTiket * harga;

      jenisText.textContent = jenis === "vip" ? "VIP" : "Reguler";
      hargaText.textContent = formatRupiah(harga);
      jumlah2.textContent = jumlahTiket;
      totalText.textContent = formatRupiah(total);
    });

    document.getElementById('reset').addEventListener('click', () => {
      jumlah.value = 1;
      document.querySelector('input[value="reguler"]').checked = true;
      jenisText.textContent = "Reguler";
      hargaText.textContent = "Rp50.000";
      jumlah2.textContent = "1";
      totalText.textContent = "Rp50.000";
    });

    function formatRupiah(angka) {
      return new Intl.NumberFormat('id-ID', {
        style: 'currency',
        currency: 'IDR',
        maximumFractionDigits: 0
      }).format(angka);
    }
  </script>
</body>
